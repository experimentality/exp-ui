{
  "name": "@experimentality/exp-ui",
  "description": "CSS framework, User Interface of Experimentality",
  "version": "0.2.7",
  "private": false,
  "scripts": {
    "start": "npm run sass & npm run watch & npm run link",
    "build": "sass --no-source-map --style compressed ./src:./dist",
    "kss": "kss --config kss-config.json",
    "sass": "sass --watch --no-source-map --style compressed ./src:./styleguide/exp-ui",
    "link": "live-server ./styleguide",
    "watch": "onchange -v './src/**/*' -- npm run kss"
  },
  "license": "ISC",
  "style": "dist/index.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/experimentality/exp-ui.git"
  },
  "author": {
    "name": "Hugo Laguna",
    "email": "hugo@experimentality.co"
  },
  "devDependencies": {
    "kss": "^3.0.0",
    "live-server": "^1.2.0",
    "michelangelo": "^0.8.0",
    "onchange": "^6.1.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.14.3"
  },
  "bugs": {
    "url": "https://github.com/experimentality/exp-ui/issues"
  },
  "homepage": "https://github.com/experimentality/exp-ui#readme"
}
